{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "no-unused-vars": "off",
    "no-console": "off",
    "no-promise-executor-return" : "off"
  },
  "overrides": [
    {
      "files": ["./src/tests/*"],
      "env": {
        "jest": true
      }
    }
  ]
}
